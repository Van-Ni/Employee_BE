@model PersonManager.Areas.Admin.Models.UserViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Cập nhật</h3></div>
                    <div class="card-body">
                        <form>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền tên người dùng" } })
                                <label for="Username">Tên tài khoản</label>
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền mật khẩu" } })
                                <label for="Password">Mật khẩu</label>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="role_id">Vai trò</label>
                                <select id="role_id" name="RoleId" class="form-control">
                                    @foreach (var role in ViewBag.Roles)
                                    {
                                        if (@role.Value == Model.RoleId.ToString())
                                        {
                                            <option value="@role.Value" selected>@role.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@role.Value">@role.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid"><input type="submit" class="btn btn-primary btn-block" value="Xác nhận"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
@Html.ActionLink("<Quay lại", "Index", null, new { @style = "color: #fff; width: 100px; margin: 0 14px", @class = "btn btn-primary" })
</div>