@model PersonManager.Areas.Admin.Models.LeaveViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Cập nhật</h3></div>
                    <div class="card-body">
                        <form>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Employee_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền mã nhân viên" } })
                                <label for="Employee_id">Mã nhân viên</label>
                                @Html.ValidationMessageFor(model => model.Employee_id, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Leave_date, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền ngày nghỉ" } })
                                <label for="Leave_date">Ngày nghỉ</label>
                                @Html.ValidationMessageFor(model => model.Leave_date, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền nguyên nhân" } })
                                <label for="Reason">Nguyên nhân</label>
                                @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="Approved">Chấp thuận</label>
                                @Html.EditorFor(model => model.Approved)
                                @Html.ValidationMessageFor(model => model.Approved, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Leave_type, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền loại nghỉ phép" } })
                                <label for="Leave_type">Loại nghỉ phép</label>
                                @Html.ValidationMessageFor(model => model.Leave_type, "", new { @class = "text-danger" })
                            </div>

                            <div class="mt-4 mb-0">
                                <div class="d-grid"><input type="submit" class="btn btn-primary btn-block" value="Xác nhận"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    @Html.ActionLink("<Quay lại", "Index", null, new { @style = "color: #fff; width: 100px; margin: 0 14px", @class = "btn btn-primary" })
</div>
