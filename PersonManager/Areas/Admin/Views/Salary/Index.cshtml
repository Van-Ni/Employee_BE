@model IEnumerable<PersonManager.Areas.Admin.Models.SalaryViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh sách lương
    </div>
    @Html.ActionLink("Tạo mới", "Create", null, new { @style = "color: #fff; width: 100px; margin: 16px", @class = "btn btn-primary" })

    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        Mã nhân viên
                    </th>
                    <th>
                        Lương cơ bản
                    </th>
                    <th>
                        Phụ cấp
                    </th>
                    <th>
                        Hệ số
                    </th>
                    <th>
                        Tiền công theo giờ
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>
                        Mã nhân viên
                    </th>
                    <th>
                        Lương cơ bản
                    </th>
                    <th>
                        Phụ cấp
                    </th>
                    <th>
                        Hệ số
                    </th>
                    <th>
                        Tiền công theo giờ
                    </th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BasicSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Allowance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coefficient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HourlyRate)
                    </td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
