@model PersonManager.Areas.Admin.Models.SalaryViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}


<div class="card mb-4">
    <div class="card-body" style="background-color: var(--bs-card-cap-bg)">Thông tin chi tiết</div>
    <div class="card-footer d-flex align-items-center justify-content-between" style="background-color: #fff">
        <dl class="dl-horizontal">

            <dt>
                Mã nhân viên
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Employee_id)
            </dd>
            <dt>
                Lương cơ bản
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BasicSalary)
            </dd>

            <dt>
                Phụ cấp
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Allowance)
            </dd>

            <dt>
                Hệ số
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Coefficient)
            </dd>

            <dt>
                Tiền công theo giờ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HourlyRate)
            </dd>


        </dl>
    </div>
</div>

<p>
    <div class="row">
        @Html.ActionLink("<Quay lại", "Index", null, new { @style = "color: #fff; width: 100px; margin: 0 14px;", @class = "btn btn-primary" })
        @Html.ActionLink("Cập nhật", "Edit", null, new { id = Model.Id }, new { id = Model.Id, @style = "color: #fff; width: 100px", @class = "btn btn-primary" })
    </div>
</p>