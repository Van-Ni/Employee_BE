@model PersonManager.Areas.Admin.Models.SalaryViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Thêm</h3></div>
                    <div class="card-body">
                        <form>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Employee_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền mã nhân viên", @required = true } })
                                <label for="Employee_id">Mã nhân viên</label>
                                @Html.ValidationMessageFor(model => model.Employee_id, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.BasicSalary, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền lương cơ bản", @required = true } })
                                <label for="BasicSalary">Lương cơ bản</label>
                                @Html.ValidationMessageFor(model => model.BasicSalary, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Allowance, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền phụ cấp", @required = true } })
                                <label for="Allowance">Phụ cấp</label>
                                @Html.ValidationMessageFor(model => model.Allowance, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.Coefficient, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền hệ số", @required = true } })
                                <label for="Coefficient">Hệ số</label>
                                @Html.ValidationMessageFor(model => model.Coefficient, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.HourlyRate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền tiền theo giờ", @required = true } })
                                <label for="HourlyRate">Tiền công theo giờ</label>
                                @Html.ValidationMessageFor(model => model.HourlyRate, "", new { @class = "text-danger" })
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid"><input type="submit" class="btn btn-primary btn-block" value="Xác nhận"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    @Html.ActionLink("<Quay lại", "Index", null, new { @style = "color: #fff; width: 100px; margin: 0 14px", @class = "btn btn-primary" })
</div>





