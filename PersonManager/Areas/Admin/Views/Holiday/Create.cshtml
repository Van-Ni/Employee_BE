@model PersonManager.Areas.Admin.Models.HolidayViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Thêm ngày nghỉ</h3></div>
                <div class="card-body">
                    <form>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.Holiday_date, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền ngày nghỉ", @required = true } })
                            <label for="Holiday_date">Ngày nghỉ</label>
                            @Html.ValidationMessageFor(model => model.Holiday_date, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền mô tả" } })
                            <label for="Description">Mô tả</label>
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.Days_off, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền số ngày nghỉ", @required = true } })
                            <label for="Days_off">Số ngày nghỉ</label>
                            @Html.ValidationMessageFor(model => model.Days_off, "", new { @class = "text-danger" })
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid"><input type="submit" class="btn btn-primary btn-block" value="Xác nhận"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
}

<div class="row">
    @Html.ActionLink("<Quay lại", "Index", null, new { @style = "color: #fff; width: 100px; margin: 0 14px", @class = "btn btn-primary" })
</div>


